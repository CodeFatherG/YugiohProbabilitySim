{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint", "jest"],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:jest/recommended"
    ],
    "env": {
        "node": true,
        "jest": true,
        "browser": true
    },
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "rules": {
        // Add any custom rules here
    },
    "overrides": [
        {
            "files": ["src/**/*.ts", "test/**/*.ts"],
            "env": {
                "jest": true
            }
        }
    ]
}